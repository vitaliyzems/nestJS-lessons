{{#if comments}}
<div class="row">
  {{#each comments}}
    <div>
      <div style="display: flex;">
        <img src="{{this.avatar}}" alt="..." style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; margin-right: 10px">
        <div>
          <h5 style="color: lightblue;">{{this.author}}</h5>
          <p class="mb-0" style="font-size: 14px;">{{this.message}}</p>
        </div>
      </div>
      {{#if this.reply}}
      {{#each this.reply}}
        <div class="mt-3" style="display: flex;">
          <div style="display: flex; align-items: center; justify-content: center; font-size: 25px; padding: 0 20px;">&#10149;</div>
          <div style="display: flex;">
            <img src="{{this.avatar}}" alt="..." style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; margin-right: 10px">
            <div>
              <h5 style="color: lightblue;">{{this.author}}</h5>
              <p class="mb-0" style="font-size: 14px;">{{this.message}}</p>
            </div>
          </div>
        </div>
      {{/each}}
      {{/if}}
      <hr>
    </div>
  {{/each}}
</div>
{{else}}
<h2>Комментариев нет</h2>
{{/if}}